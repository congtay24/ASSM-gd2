<section class="vh-100">
    <div class="container-fluid h-custom">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="justify-content-center col-md-8 col-lg-6 col-xl-4 offset-xl-1">
                <form method="POST" action="/dangky">
                    <div class="divider d-flex justify-content-center align-items-center my-4">
                        <h3 class="text-center fw-bold mx-3 mb-0">Đăng ký tài khoản</h3>
                    </div>
                    <div class="form-floating mb-3">
                        <input type="text" class="form-control" name="username" id="username"
                            placeholder="name@example.com" required>
                        <label for="username">Username</label>
                    </div>
                    <div class="form-floating mb-2">
                        <input type="password" class="form-control" name="password" id="password" placeholder="Password"
                            required>
                        <label for="password">Password</label>
                    </div>
                    <div class="divider d-flex justify-content-center align-items-center my-3">
                        <button type="submit" class="btn btn-primary btn-lg fw-bold"
                            style="padding-left: 2.5rem; padding-right: 2.5rem;"onclick="return confirm('Bạn có chắc muốn đăng ký tài khoản mới ?');"  >Đăng ký</button>
                    </div>
                </form>
                <div class="divider d-flex justify-content-center align-items-center">
                    <p class="small fw-bold">Đã có tài khoản? <a href="./" class="link-danger">Đăng nhập</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>